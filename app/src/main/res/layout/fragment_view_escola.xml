<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewEscola"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" android:orientation="vertical"  >

    <TextView
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblNomeEscola"
        android:text="Your name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblEmailEscola"
        android:text="Your name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Endereço:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblEnderecoEscola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:layout_marginTop="60px"
        android:id="@+id/buttonMaisInformacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mais Informações"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"/>

    <Button
        android:layout_marginTop="30px"
        android:id="@+id/buttonMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Localização"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"/>

    <Button
        android:layout_marginTop="30px"
        android:id="@+id/buttonFotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:text="Fotos" />

</LinearLayout>